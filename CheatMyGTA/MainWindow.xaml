<Window x:Class="CheatMyGTA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheatMyGTA"
        mc:Ignorable="d"
        Title="CheatMyGTA" Height="450" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="gamesComboBox" Grid.ColumnSpan="2" Margin="10,10,10,0" VerticalAlignment="Top" RenderTransformOrigin="0.991,-1.67"/>
        <Button Grid.ColumnSpan="2" Content="Attach to game" Margin="10,37,10,0" VerticalAlignment="Top" Click="AttachToGame"/>

    </Grid>
</Window>
